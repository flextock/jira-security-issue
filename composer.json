{
    "name": "reload/jira-security-issue",
    "description": "Create Jira issues if it doesn't exist",
    "license": "MIT",
    "require": {
        "php": ">=7.2.0",
        "lesstif/php-jira-rest-client": "^5",
        "webignition/symfony-console-typed-input": "^0.4.0"
    },
    "autoload": {
        "psr-4": {
            "Reload\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reload\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/appocular/coding-standard"
        }
    ],
    "require-dev": {
        "appocular/coding-standard": "^2.0",
        "phpstan/phpstan": "^1.0.0",
        "phpunit/phpunit": "^8.5",
        "sempro/phpunit-pretty-print": "^1.2",
        "symfony/console": "^5.0",
        "phpspec/prophecy": "^1.15"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
